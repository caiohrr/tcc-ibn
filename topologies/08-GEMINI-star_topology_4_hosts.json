{
  "ID": "star_topology_4_hosts",
  "VERSION": "1.0",
  "DESCRIPTION": "A star topology with four hosts connected to a central switch, each on a different subnet.",
  "MONITORING": {
    "enabled": true,
    "interval": 5,
    "recovery_enabled": false
  },
  "COMPONENTS": {
    "HOSTS": [
      {
        "ID": "h1",
        "IP": "10.0.0.1/24",
        "MAC": "00:00:00:00:00:01"
      },
      {
        "ID": "h2",
        "IP": "20.0.0.1/24",
        "MAC": "00:00:00:00:00:02"
      },
      {
        "ID": "h3",
        "IP": "30.0.0.1/24",
        "MAC": "00:00:00:00:00:03"
      },
      {
        "ID": "h4",
        "IP": "40.0.0.1/24",
        "MAC": "00:00:00:00:00:04"
      }
    ],
    "SWITCHES": [
      {
        "ID": "s1",
        "TYPE": "OVSSwitch",
        "PARAMS": {
          "PROTOCOLS": "OpenFlow13"
        }
      }
    ],
    "CONTROLLERS": [
      {
        "ID": "c0",
        "TYPE": "Controller",
        "PARAMS": {
          "IP": "127.0.0.1",
          "PORT": 6653
        }
      }
    ]
  },
  "CONNECTIONS": [
    {
      "ENDPOINTS": ["h1", "s1"],
      "PARAMS": {
        "BANDWIDTH": 100,
        "DELAY": "2ms"
      }
    },
    {
      "ENDPOINTS": ["h2", "s1"],
      "PARAMS": {
        "BANDWIDTH": 100,
        "DELAY": "2ms"
      }
    },
    {
      "ENDPOINTS": ["h3", "s1"],
      "PARAMS": {
        "BANDWIDTH": 100,
        "DELAY": "2ms"
      }
    },
    {
      "ENDPOINTS": ["h4", "s1"],
      "PARAMS": {
        "BANDWIDTH": 100,
        "DELAY": "2ms"
      }
    }
  ]
}
