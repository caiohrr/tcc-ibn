{
  "ID": "simple_topology",
  "VERSION": "1.0",
  "DESCRIPTION": "A simple topology with two hosts and one switch to test monitoring.",
  "MONITORING": {
    "enabled": true,
    "interval": 5,
    "recovery_enabled": true
  },
  "COMPONENTS": {
    "HOSTS": [
      {
        "ID": "h1",
        "IP": "10.0.0.1/24"
      },
      {
        "ID": "h2",
        "IP": "10.0.0.2/24"
      }
    ],
    "SWITCHES": [
      {
        "ID": "s1",
        "TYPE": "OVSKernelSwitch"
      }
    ]
  },
  "CONNECTIONS": [
    {
      "ENDPOINTS": ["h1", "s1"],
      "PARAMS": {
        "bandwidth": 10,
        "delay": "15ms",
        "loss": 0
      }
    },
    {
      "ENDPOINTS": ["h2", "s1"]
    }
  ]
}
